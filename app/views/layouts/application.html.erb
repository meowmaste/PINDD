<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Pyndd" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Pyndd" %>">
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <% if Rails.env.development? %>
      <%= javascript_include_tag Sync.adapter_javascript_url %>
    <% end %>
    <%= csrf_meta_tags %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-47868023-1', 'pindd.herokuapp.com');
      ga('send', 'pageview');
    </script>
    <link href='https://fonts.googleapis.com/css?family=Averia+Sans+Libre|Flamenco' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <% if user_signed_in? %>
      <%= render 'layouts/navigation' %>
    <% end %>
 <% if user_signed_in? %>
      <%= render 'layouts/user' %>
    <% end %>
    <div class="center">
      <% flash.each do |name, msg| -%>
        <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>

    <%= yield %>

  </body>
</html>
